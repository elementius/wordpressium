{
  "name": "wordpressium",
  "version": "1.0.0",
  "description": "",
  "main": "gulpfile.babel.js",
  "scripts": {
    "build": "gulp",
    "watch": "gulp watch",
    "dev": "cross-env NODE_ENV=development npm run watch",
    "prod": "cross-env NODE_ENV=production npm run build",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/elementius/wordpressium.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/elementius/wordpressium/issues"
  },
  "homepage": "https://github.com/elementius/wordpressium#readme",
  "engines": {
    "node": ">=8.1.0",
    "npm": ">=5.0.0"
  },
  "devDependencies": {
    "autoprefixer": "^7.1.2",
    "babel-preset-env": "^1.6.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-1": "^6.24.1",
    "babelify": "^7.3.0",
    "browserify": "^14.4.0",
    "cross-env": "^5.0.1",
    "cssnano": "^3.10.0",
    "eslint": "^4.3.0",
    "event-stream": "^3.3.4",
    "gulp": "^3.9.1",
    "gulp-htmlmin": "^3.0.0",
    "gulp-imagemin": "^3.3.0",
    "gulp-newer": "^1.3.0",
    "gulp-postcss": "^7.0.0",
    "gulp-rename": "^1.2.2",
    "gulp-sass": "^3.1.0",
    "gulp-sass-bulk-import": "^1.0.1",
    "gulp-uglify": "^3.0.0",
    "imagemin-jpegoptim": "^5.1.0",
    "node-notifier": "^5.1.2",
    "postcss-normalize": "^4.0.0",
    "run-sequence": "^2.0.0",
    "vinyl-buffer": "^1.0.0",
    "vinyl-source-stream": "^1.1.0"
  },
  "dependencies": {
    "approvejs": "^3.1.2",
    "bourbon-neat": "^1.9.0",
    "flickity": "^2.0.9",
    "lodash": "^4.17.4",
    "node-bourbon": "^4.2.8",
    "node-neat": "^2.0.0-beta.0"
  },
  "browserslist": {
    "production": [
      "> 2%",
      "last 3 versions",
      "not IE < 10"
    ],
    "development": [
      "last 2 versions",
      "not IE <= 10"
    ]
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "commonjs": true,
      "es6": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
      "sourceType": "module"
    },
    "rules": {
      "no-console": [
        "error",
        {
          "allow": [
            "warn",
            "error"
          ]
        }
      ],
      "indent": [
        "error",
        4
      ],
      "linebreak-style": [
        "error",
        "unix"
      ],
      "quotes": [
        "error",
        "single"
      ],
      "semi": [
        "error",
        "always"
      ]
    }
  },
  "babel": {
    "presets": [
      "env",
      "es2015",
      "stage-1"
    ]
  }
}
